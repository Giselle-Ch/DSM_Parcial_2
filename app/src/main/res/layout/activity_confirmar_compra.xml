<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmarCompraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D5E2EC"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D5E2EC"
                android:onClick="pantallaProductos"
                app:srcCompat="@mipmap/retroceder" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:letterSpacing=".05"
                android:text="@string/txtTituloCompra"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="34dp" />

            <ImageButton
                android:id="@+id/btnEliminarCompra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="#D5E2EC"
                android:src="@mipmap/eliminar" />

        </LinearLayout>



<!--        <Button-->
<!--            -->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="190dp"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:backgroundTint="#353333"-->
<!--            android:text="Eliminar compra" />-->

        <ListView
            android:id="@+id/ListaProductos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/txtTotalCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Total "
            android:textSize="24dp"
            android:textAlignment="center"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnConfirmarCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0F1B5C"
            android:text="@string/btnConfirmarCompra" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>